% a normal curve with given mu equal 1
\documentclass[crop, tikz]{standalone}

\usepackage{tikz,eurosym,rotating}

\begin{document}

<<echo = FALSE, results = tex>>=
source("indifference.R")
xmin <- -2
xmax <- 4
ymin <- 0
ymax <- 0.7

xdim <- xmax - xmin
ydim <- ymax - ymin

#xdim <- 7
#ydim <- 1
xunit <- round(xcm / xdim, 2)
yunit <- round(ycm / ydim, 2)

mu1 <- 1.5
mu1 <- 0.5
mu1 <- .8
sigma <- 1
PI <- pnorm(0, mu1)
xs <- seq(xmin, xmax, 0.01)
ys1 <- dnorm(xs, mean = mu1, sd = sigma)
ys2 <- ys1 / (1 - PI)
E <- mu1 + exp(dnorm(mu1, log = TRUE) - pnorm(mu1, log.p = TRUE))

cat(paste("\\begin{tikzpicture}[x = ", xunit, "cm, y = ", yunit, "cm]\n"))
# draw the axes


xhor <- 2 * xmax - xmin

matptsup <- cbind(seq(xmin, 0, 0.01), dnorm(seq(xmin, 0, 0.01), mu1))
matptsup <- rbind(c(xmin, 0), matptsup, c(0, dnorm(0, 0.5)), c(0, 0))
cat(paste("\\fill[color = gray!20] ", TIKmat2path(matptsup), " -- cycle;", sep = ""))
TIKline(list(c(xmin, 0), c(xmax, 0)), options = "->")
TIKline(list(c(0, ymin), c(0, ymax)), options = "->")
TIKnode(c(xmax, 0), "y", pos = "right")
#TIKnode(c(0, ymax), "y", pos = "above")
TIKnode(c(0, 0), "0", pos = "below")
TIKnode(c(3.2, 0.3), "$\\frac{1}{\\sigma}\\phi\\left(\\frac{y-\\beta'x}{\\sigma}\\right)$")
TIKline(list(c(2, 0.29), c(1.5, dnorm(1.5, mu1))), options = "->") 
TIKnode(c(3.2, 0.5), "$\\frac{1}{\\sigma}\\frac{\\phi\\left(\\frac{y-\\beta'x}{\\sigma}\\right)}{\\Phi\\left(\\frac{\\beta'x}{\\sigma}\\right)}$")
TIKline(list(c(2, 0.49), c(1.25, dnorm(1.25, mu1) / (1 - PI))), options = "->") 
TIKnode(c(0.1, 0.1), "$1-\\Phi\\left(\\frac{\\beta'x}{\\sigma}\\right)$")
TIKline(cbind(xs, ys1))
TIKline(cbind(xs[xs > 0], ys2[xs > 0]), options = "dashed")
TIKcoords(c(mu1, dnorm(mu1, mean = mu1, sd = sigma)), labx = "$\\beta'x$")
TIKnode(c(E, 0), "$\\mbox{E}(y\\mid x)$", pos = "below")
TIKline(list(c(E, -0.01), c(E, +0.01)), options = "thick")


matptsup <- cbind(xhor + seq(xmin, 0, 0.01), dnorm(xhor + seq(xmin, 0, 0.01), mu1))
matptsup <- rbind(c(xhor + xmin, 0), matptsup, c(xhor + 0, dnorm(0, 0.5)), c(0, 0))
cat(paste("\\fill[color = gray!20] ", TIKmat2path(matptsup), " -- cycle;", sep = ""))
TIKline(list(c(xmin + xhor, 0), c(xmax + xhor, 0)), options = "->")
TIKline(list(c(xhor, ymin), c(xhor, ymax)), options = "->")
TIKnode(c(xmax + xhor, 0), "y", pos = "right")
#TIKnode(c(0, ymax), "y", pos = "above")
TIKnode(c(xhor, 0), "0", pos = "below")
TIKnode(c(3.2 + xhor, 0.3), "$\\frac{1}{\\sigma}\\phi\\left(\\frac{y-\\beta'x}{\\sigma}\\right)$")
TIKline(list(c(2 + xhor, 0.29), c(1.5 + xhor, dnorm(1.5, mu1))), options = "->") 
TIKnode(c(3.2 + xhor, 0.5), "$\\frac{1}{\\sigma}\\frac{\\phi\\left(\\frac{y-\\beta'x}{\\sigma}\\right)}{\\Phi\\left(\\frac{\\beta'x}{\\sigma}\\right)}$")
TIKline(list(c(2 + xhor, 0.49), c(1.25 + xhor, dnorm(1.25, mu1) / (1 - PI))), options = "->") 
TIKnode(c(0.1 + xhor, 0.1), "$1-\\Phi\\left(\\frac{\\beta'x}{\\sigma}\\right)$")
TIKline(cbind(xs + xhor, ys1))
TIKline(cbind(xs[xs > 0] + xhor, ys2[xs > 0]), options = "dashed")
TIKcoords(c(xhor + mu1, dnorm(mu1, mean = mu1, sd = sigma)), labx = "$\\beta'x$")
TIKnode(c(xhor + E, 0), "$\\mbox{E}(y\\mid x)$", pos = "below")
TIKline(list(c(xhor + E, -0.01), c(xhor + E, +0.01)), options = "thick")


@   
\end{tikzpicture}

\end{document}
